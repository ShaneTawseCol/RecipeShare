<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="RecipeShare.RecipeManagement"
    Title="RecipeManagement" Height="660" Width="1060">
    <Grid Background="#FF6BC5E3">
        <GroupBox HorizontalAlignment="Left" Height="276" Header="Nav Panel" Margin="56,46,0,0" VerticalAlignment="Top" Width="130">
            <StackPanel Height="258">
                <Button x:Name="Backbtn" Content="Back" Height="40" Margin="10,10,10,10" Width="100" Click="BackButton_Click"/>
                <Button x:Name="Loginbtn" Content="Home" Height="40" Margin="10,10,10,10" Width="100" Click="LoginButton_Click"/>
                <Button x:Name="DeleteRecipebtn" Content="Delete" Height="40" Margin="10,10,10,10" Width="100" Click="DeleteRecipeButton_Click"/>
                <Button Content="Close" Height="40" Margin="10,10,10,10" Width="100" Click="CloseButton_Click"/>
            </StackPanel>
        </GroupBox>
        <Label Content="Recipe Management" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
        <ListBox x:Name="RecipeListBox" HorizontalAlignment="Center" Height="277" Margin="0,60,0,0" VerticalAlignment="Top" Width="609"/>
    </Grid>
</Window>
