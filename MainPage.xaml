                <DiscreteObjectKeyFrame KeyTime="0:0:10" Value="{x:Static Visibility.Collapsed}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:15" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Image3" Storyboard.TargetProperty="(UIElement.Visibility)">
