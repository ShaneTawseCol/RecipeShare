                    <Image x:Name="Image1" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/bccef00a705994f87cbe1e264bf0e9a1.jpg"/>
                    <Image x:Name="Image2" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/funny-print-ads-03.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image3" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/enhanced-buzz-4420-1329265613-29.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image4" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/12.-guinness-famous-print-ads.jpg"/>
                    <Image x:Name="Image5" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/ba1e0e455257be613da6e7fcdf095e04.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image6" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/creativeads99ap8.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image7" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/Heinz-Ketchup-Advertising-Example-No-one-develops-Ketchup-like-Heinz-Campaign.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image8" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/Red-Bull.jpg" Visibility="Collapsed"/>
                    <Image x:Name="Image9" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/Screenshot 2024-11-30 184942.png" Visibility="Collapsed"/>
                    <Image x:Name="Image10" Width="199" Height="130" Source="pack://application:,,,/RemotePatientMonitoring;component/RecipeImages/Untitled-design-64.png" Visibility="Collapsed"/>
                </Canvas>
            </Border>
        </Grid>

        <Rectangle HorizontalAlignment="Left" Height="46" Margin="231,604,0,0" VerticalAlignment="Top" Width="394" RenderTransformOrigin="0.5,0.5" Stroke="Black" Fill="#FF5D95E3">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Content="Where Communties Come To Eat" HorizontalAlignment="Left" Height="43" Margin="236,607,0,0" VerticalAlignment="Top" Width="342" FontSize="20" Foreground="#FFE9E9EE" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Left" Height="130" Margin="16,99,0,0" VerticalAlignment="Top" Width="208"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="130" Margin="16,99,0,0" VerticalAlignment="Top" Width="208"/>
